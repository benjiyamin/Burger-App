<nav class="navbar navbar-dark bg-dark">
  <a class="navbar-brand" href="/">Hamburger</a>
</nav>

<div class="container">
  <div class="jumbotron mt-4">
    <div class="row">
      <div class="col">
        <form class="needs-validation" novalidate>
          <div class="form-group">
            <label for="nameInput">Burger Name</label>
            <input type="text" class="form-control" id="nameInput" aria-describedby="nameHelp" placeholder="Enter name"
              name="name" required>
            <div class="invalid-feedback">
              Please choose a vaild name.
            </div>
          </div>
          <button type="submit" class="btn btn-primary" id="newBurgerBtn">Submit</button>
        </form>
      </div>
    </div>
    <hr class="my-4">
    <div class="row">
      <div class="col">
        <ul class="list-group" id="burgers">
          {{#each burgers}}
          {{> burgers/burger-block}}
          {{/each}}
        </ul>
      </div>
      <div class="col" id="devoured"></div>
    </div>
  </div>
</div>